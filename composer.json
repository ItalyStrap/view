{
    "name": "italystrap/view",
    "description": "View API for loading template parts and views the OOP way",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "overclokk",
            "email": "info@overclokk.net",
            "homepage": "https://www.italystrap.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : ">=7.2",
        "italystrap/config": "^2.1"
    },
    "require-dev": {
        "lucatume/wp-browser": "~2.2",
        "lucatume/function-mocker-le": "^1.0",
        "italystrap/debug": "*",
        "wp-coding-standards/wpcs": "^2.1",
        "phpcompatibility/php-compatibility": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "brain/hierarchy": "^2.4"
    },
    "autoload": {
        "files": [
            "functions/autoload.php"
        ],
        "psr-4": {
            "ItalyStrap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ItalyStrap\\Test\\" : "tests/"
        }
    },
    "scripts": {
        "check": [
            ".\\vendor\\bin\\phpcs -p --standard=PHPCompatibility src",
            ".\\vendor\\bin\\phpcs -p --standard=WordPress src"
        ],
        "test": [
            "test"
        ]
    }
}
